<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5dp"
	android:gravity="center_horizontal"
	android:background="@color/fly_verify_demo_common_bg"
	android:orientation="vertical">
	<ImageView
		android:layout_width="@dimen/fly_verify_demo_common_100"
		android:layout_height="@dimen/fly_verify_demo_common_100"
		android:layout_marginTop="@dimen/fly_verify_demo_common_90"
		android:scaleType="centerCrop"
		android:src="@drawable/fly_verify_demo_success_complete"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/fly_verify_demo_common_20"
		android:textSize="@dimen/fly_verify_demo_text_size_m"
		android:textColor="@color/fly_verify_demo_text_color_common_black"
		android:text="@string/fly_verify_demo_success_complete"/>
	<TextView
		android:id="@+id/fly_verify_demo_success_phone_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/fly_verify_demo_common_20"
		android:textSize="@dimen/fly_verify_demo_text_size_s"
		android:textColor="@color/fly_verify_demo_text_color_common_black"
		tools:text="13112345678"/>
	<cn.fly.verify.ui.component.VerifyCommonButton
		android:id="@+id/fly_verify_demo_success_one_more_try_btn"
		android:layout_width="match_parent"
		android:layout_height="@dimen/fly_verify_demo_common_50"
		android:layout_marginTop="@dimen/fly_verify_demo_common_50"
		android:layout_marginLeft="@dimen/fly_verify_demo_common_20"
		android:layout_marginRight="@dimen/fly_verify_demo_common_20"
		app:vcombtn_text="@string/fly_verify_demo_success_one_more_try"/>
</LinearLayout>